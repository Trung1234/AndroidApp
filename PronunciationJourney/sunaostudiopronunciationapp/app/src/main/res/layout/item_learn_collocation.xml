<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtEngTopic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:lines="2"
        android:text="Group"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imgAudio"
        />

    <TextView
        android:id="@+id/txtVietTopic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEngTopic"
        android:layout_alignStart="@+id/txtEngTopic"
        android:layout_below="@+id/txtEngTopic"
        android:lines="2"
        android:text="Nhóm từ 1"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintRight_toRightOf="@id/txtEngTopic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEngTopic"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_weight="1"
        android:src="@drawable/star_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>
    <ImageView
        android:id="@+id/imgAudio"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/volume_blue"
        app:layout_constraintRight_toLeftOf="@id/imgStar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/imgAudio"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/_5sdp"/>
</android.support.constraint.ConstraintLayout>